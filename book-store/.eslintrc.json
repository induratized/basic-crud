{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "curly": ["error"],
    "block-spacing": ["error", "always"],
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
  },
  "globals": {
    "process": "readonly",
    "InAppResponseHandler": "readonly",
    "webkit": "readonly"
  }
}
